

<h1 class="h1 mt-4 mb-2">Restaurants</h1>

<% @restaurants.each do |restaurant| %>

  <%= link_to restaurant_path(restaurant) do %>
    <div>
      <p> <%= restaurant.name %> </p>
    </div>
  <% end %>

<% end %>

<%= link_to "New Restaurant", new_restaurant_path, class: "btn btn-primary text-light" %>
